<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:background="@color/darkwhite"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="320dp"
        cardview:cardBackgroundColor="@color/brown"
        cardview:cardCornerRadius="15dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"

        android:padding="5dp"
        android:elevation="6dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/swami"
            android:layout_gravity="center"
            android:gravity="center"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        cardview:cardBackgroundColor="@color/white"
        android:layout_marginBottom="5dp"
        cardview:cardCornerRadius="7dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:textSize="17dp"

            android:textColor="@color/black"
            android:text="Developed by:"
            android:gravity="center"
            android:elevation="3dp"



            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        cardview:cardBackgroundColor="@color/brown"
        android:layout_marginBottom="5dp"
        cardview:cardCornerRadius="7dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:textSize="17dp"

            android:textColor="@color/white"
            android:text="Swami Ramchandra Kedari"
            android:gravity="center"
            android:elevation="3dp"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        cardview:cardBackgroundColor="@color/black"
        android:layout_marginBottom="5dp"
        cardview:cardCornerRadius="7dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:textSize="17dp"

            android:textColor="@color/black"
            android:text="3rd year , B.Tech. , Computer Science and Engineering"
            android:gravity="center"
            android:elevation="3dp"
            android:background="@color/white"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        cardview:cardBackgroundColor="@color/brown"
        android:layout_marginBottom="5dp"
        cardview:cardCornerRadius="7dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:textSize="17dp"

            android:textColor="@color/white"
            android:text="IIT Tirupati"
            android:gravity="center"
            android:elevation="3dp"

            />
    </androidx.cardview.widget.CardView>




</LinearLayout>
